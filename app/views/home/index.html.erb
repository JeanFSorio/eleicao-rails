<h1>Histórico 2º Turno</h1>
<%= form_with(scope: "resultado") do |f| %>
  <div class="field">
    <%= f.label :tipo %><br />
    <%= f.select :tipo, %w(Presidente Governador), {include_blank: false }, {disabled: true }%>
  </div>
  <div class="field">
    <%= f.label :localidade %><br />
    <%= f.select :localidade, @localidades.collect { |p| [ p.nome, p.sigla ] }, {include_blank: false } %>
  </div>
 <div class="field">
    <%= f.label :horario, "Horario" %><br />
    <%= f.select :horario, Resultado.all.collect { |p| [ p.cdabr, p._id ] },{ include_blank: true }  %>

  </div> 
<% end %>
<div id="resultados">
</div>







<script type="text/javascript">     


var resultados = new Array();
<% for resultado in @resultados -%>
  if ('<%= resultado['carper'] %>' == "1")
    resultados.push(new Array('<%= resultado['cdabr'] %>', '<%=h resultado['datetime'] %>', '<%= resultado['_id'] %>'));
<% end -%>

function localidadeSelected() {
  localidade = $('#resultado_localidade').val();
  options = $("select#resultado_horario option").map(function() {return $(this).val();}).get();
  options.length = 1;
  resultados.forEach(function(resultado) {
    if (resultado[0].toLowerCase() == localidade.toLowerCase()) {
      options[options.length] = new Option(resultado[1], resultado[2]);
    }
  });
  $("#resultado_horario").replaceOptions(options);
  
}

(function($, window) {
  $.fn.replaceOptions = function(options) {
    var self, $option;

    this.empty();
    self = this;

    $.each(options, function(index, option) {
      $option = $("<option></option>")
        .attr("value", option.value)
        .text(option.text);
      self.append($option);
    });
  };
  
})(jQuery, window);

  $('#resultado_localidade').on('change', localidadeSelected);
  $('#resultado_localidade').ready( localidadeSelected);
  $('#resultado_horario').ready( renderApuracao);
  $(document).on("change", '#resultado_horario', renderApuracao);

  function renderApuracao(){
